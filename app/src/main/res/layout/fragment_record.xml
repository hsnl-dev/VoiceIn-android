<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/record_frag_cl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.kits.voicein.fragment.GroupFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:visibility="invisible"
        android:textColor="@color/secondary_text"
        android:text="@string/no_record_notice"
        android:id="@+id/record_frag_tv_state"
        style="@style/TextAppearance.AppCompat.Body1" />
    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/record_frag_sp_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/record_frag_rv_main"/>

    </android.support.v4.widget.SwipeRefreshLayout>
