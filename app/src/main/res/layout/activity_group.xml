<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/group_cl_main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="tw.kits.voicein.activity.GroupActivity">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/group_rv_list"/>
    <android.support.design.widget.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_face_white_24dp"
        android:id="@+id/group_fab_edit"
        app:fabSize="normal"
        app:layout_anchor="@+id/group_rv_list"
        app:layout_anchorGravity="right|end|bottom"
        />

</android.support.design.widget.CoordinatorLayout>
